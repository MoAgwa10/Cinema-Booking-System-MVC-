@model Cinema_Booking_System.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<h2>Delete Actor</h2>

<div>
    <h3>Are you sure you want to delete this actor?</h3>
    <div>
        <img src="@Model.ProfilePicUrl" alt="@Model.FullName" style="width:120px;height:150px;" />
        <h4>@Model.FullName</h4>
        <p>@Model.Bio</p>
    </div>
</div>

<form asp-action="Delete" method="post" onsubmit="return confirm('⚠️ Are you sure you want to delete this actor?');">

    <input type="hidden" asp-for="id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
