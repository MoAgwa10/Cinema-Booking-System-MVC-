@model Cinema_Booking_System.Models.Actor

@{
    ViewData["Title"] = "Edit Actor";
}

<h2>Edit Actor</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bio"></label>
        <textarea asp-for="Bio" class="form-control"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfilePicUrl"></label>
        <input asp-for="ProfilePicUrl" class="form-control" />
        <span asp-validation-for="ProfilePicUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
