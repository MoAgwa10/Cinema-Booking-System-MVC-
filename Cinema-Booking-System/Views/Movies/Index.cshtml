@using Cinema_Booking_System.Models
@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-md-12">
            <p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Movie
                </a>
            </p>
        </div>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <h5 class="card-title">
                                @item.Name
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.id"><i class="bi bi-pencil-square"></i></a>
                                }
                            </h5>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <img src="@item.ImageUrl" width="100%" alt="@item.Name" />
                    </div>

                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Category: </b>@item.movieCategory</p>
                            <p class="card-text"><b>Start Date: </b>@item.Startdate.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>End Date: </b>@item.Enddate.ToString("dd MMM yy")</p>

                            <!-- عرض السينمات -->
                            <p class="card-text mb-1">
                                <b>Cinema(s): </b>
                                @if (item.Movies_Cinemas != null && item.Movies_Cinemas.Any())
                                {
                                    @string.Join(", ", item.Movies_Cinemas.Select(mc => mc.Cinema.FullName))
                                }
                                else
                                {
                                    <span class="text-muted">No cinema assigned</span>
                                }
                            </p>

                            <!-- عرض الممثلين -->
                            <p class="card-text mb-1">
                                <b>Actors:</b>
                                @if (item.Actor_Movies != null && item.Actor_Movies.Any())
                                {
                                    foreach (var actorLink in item.Actor_Movies)
                                    {
                                        <a asp-controller="Actor"
                                           asp-action="Details"
                                           asp-route-id="@actorLink.Actor.id"
                                           class="text-decoration-none text-primary">
                                            @actorLink.Actor.FullName
                                        </a>

                                        @if (actorLink != item.Actor_Movies.Last())
                                        {
                                            <span>, </span>
                                        }
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">No actors assigned</span>
                                }
                            </p>

                            <p class="card-text">
                                <b>Status: </b>
                                @if (DateTime.Now >= item.Startdate && DateTime.Now <= item.Enddate)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else if (DateTime.Now > item.Enddate)
                                {
                                    <span class="badge bg-danger text-white">EXPIRED</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>

                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.id">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                }

                                @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin") && DateTime.Now <= item.Enddate)
                                {
                                    <a class="btn btn-success text-white"
                                       asp-controller="Orders"
                                       asp-action="AddItemToShoppingCart"
                                       asp-route-id="@item.id">
                                        <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))
                                    </a>
                                }
                                else if (User.IsInRole("Admin"))
                                {
                                    <span class="text-muted">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Admin users cannot purchase tickets
                                    </span>
                                }
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
