@model IEnumerable<Cinema_Booking_System.Models.Actor>

@{
    ViewData["Title"] = "Actors Management";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="display-6 fw-bold text-primary mb-1">
                        <i class="bi bi-people me-2"></i>Actors Management
                    </h2>
                    <p class="text-muted mb-0">Manage all actors in the cinema booking system</p>
                </div>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-plus-circle me-2"></i>Add New Actor
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Actors Grid -->
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var actor in Model)
            {
                <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                    <div class="card actor-card h-100 shadow-sm">
                        <div class="card-header bg-light border-0 text-center py-3">
                            <div class="actor-image-container">
                                <img src="@actor.ProfilePicUrl" alt="@actor.FullName" 
                                     class="actor-image rounded-circle shadow" 
                                     onerror="this.src='/images/default-actor.png'" />
                            </div>
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold text-primary mb-2">@actor.FullName</h5>
                            <p class="card-text text-muted small">
                                @(actor.Bio.Length > 100 ? actor.Bio.Substring(0, 100) + "..." : actor.Bio)
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-center pb-3">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@actor.id" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>Details
                                </a>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@actor.id" 
                                       class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@actor.id" 
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card text-center py-5">
                    <div class="card-body">
                        <i class="bi bi-people display-1 text-muted mb-3"></i>
                        <h4 class="text-muted">No Actors Found</h4>
                        <p class="text-muted mb-4">There are no actors in the system yet.</p>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Add First Actor
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Beautiful stable design - No shaking */
    .actor-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        /* Stable hover effect only */
        transition: box-shadow 0.3s ease;
        /* Prevent layout shifts */
        min-height: 350px;
        will-change: box-shadow;
    }
    
    .actor-card:hover {
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        /* No transform to prevent shaking */
    }
    
    .actor-image-container {
        position: relative;
        display: inline-block;
    }
    
    .actor-image {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border: 4px solid #fff;
        /* Prevent image loading flicker */
        background-color: #f8f9fa;
        display: block;
        transition: opacity 0.2s ease;
    }
    
    .actor-image.loading {
        opacity: 0.7;
    }
    
    .btn-group .btn {
        border-radius: 20px;
        margin: 0 2px;
    }
    
    .card-title {
        font-size: 1.1rem;
    }
    
    @@media (max-width: 768px) {
        .actor-image {
            width: 100px;
            height: 100px;
        }
        
        .btn-group .btn {
            font-size: 0.875rem;
            padding: 0.375rem 0.75rem;
        }
    }
</style>

<script>
    // Stable script - No shaking effects
    $(document).ready(function() {
        // Smooth image loading
        $('.actor-image').each(function() {
            var $img = $(this);
            
            // Add loading class initially
            $img.addClass('loading');
            
            // Handle successful load
            $img.on('load', function() {
                $(this).removeClass('loading');
            });
            
            // Handle error - fallback to default image
            $img.on('error', function() {
                $(this).removeClass('loading');
                $(this).attr('src', '/images/default-actor.png');
            });
        });
        
        // Prevent any layout shifts during page load
        setTimeout(function() {
            $('.actor-card').css('min-height', 'auto');
        }, 1000);
    });
</script>
