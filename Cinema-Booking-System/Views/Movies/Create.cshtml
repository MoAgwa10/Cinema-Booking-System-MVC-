@using Cinema_Booking_System.Data
@using Cinema_Booking_System.Models.ViewModels
@model MovieCreateVM

@{
    ViewData["Title"] = "Add a new movie";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Add a New Movie</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Startdate" class="control-label">Start Date</label>
                                <input asp-for="Startdate" type="date" class="form-control" />
                                <span asp-validation-for="Startdate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Enddate" class="control-label">End Date</label>
                                <input asp-for="Enddate" type="date" class="form-control" />
                                <span asp-validation-for="Enddate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center">
                                <img id="PosterPreview" src="/images/default-movie.png" alt="Movie Poster Preview" style="max-width: 200px;" class="rounded" />
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="ImageFile" class="control-label">Movie Poster (Optional)</label>
                                <input asp-for="ImageFile" type="file" class="form-control" id="ImageFile" accept="image/*" />
                                <small class="form-text text-muted">Upload an image file (JPG, PNG, WebP) - Max 5MB (Optional)</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="movieCategory" class="control-label">
                                    <i class="bi bi-tags me-2"></i>Movie Genre
                                </label>
                                <select asp-for="movieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()">
                                    <option value="">Select movie genre</option>
                                </select>
                                <span asp-validation-for="movieCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProducerId" class="control-label">
                                    <i class="bi bi-person-badge me-2"></i>Select Producer
                                </label>
                                <select asp-for="ProducerId" class="form-control" asp-items="@(new SelectList(Model.Producers, "id", "FullName"))">
                                    <option value="">Select producer</option>
                                </select>
                                <span asp-validation-for="ProducerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SelectedActorIds" class="control-label">
                                    <i class="bi bi-people me-2"></i>Select Actor(s)
                                </label>
                                <select asp-for="SelectedActorIds" class="form-control multi-select" asp-items="@(new SelectList(Model.Actors, "id", "FullName"))" multiple>
                                </select>
                                <div class="form-text">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Hold Ctrl (Cmd on Mac) to select multiple actors
                                    </small>
                                </div>
                                <span asp-validation-for="SelectedActorIds" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SelectedCinemaIds" class="control-label">
                                    <i class="bi bi-building me-2"></i>Select Cinema(s)
                                </label>
                                <select asp-for="SelectedCinemaIds" class="form-control multi-select" asp-items="@(new SelectList(Model.Cinemas, "id", "FullName"))" multiple>
                                </select>
                                <div class="form-text">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Hold Ctrl (Cmd on Mac) to select multiple cinemas
                                    </small>
                                </div>
                                <span asp-validation-for="SelectedCinemaIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <style>
        .multi-select {
            min-height: 120px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            transition: border-color 0.3s ease;
        }
        
        .multi-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        
        .multi-select option {
            padding: 8px 12px;
            margin: 2px 0;
            border-radius: 4px;
        }
        
        .multi-select option:checked {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            color: white;
        }
        
        .form-text {
            margin-top: 5px;
        }
        
        .genre-badge {
            display: inline-block;
            padding: 4px 8px;
            margin: 2px;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            font-size: 0.875rem;
        }
    </style>
    
    <script>
        $(document).ready(function() {
            // Enhance multi-select appearance
            $('.multi-select').on('focus', function() {
                $(this).addClass('shadow-sm');
            }).on('blur', function() {
                $(this).removeClass('shadow-sm');
            });
            
            // Add visual feedback for selected options
            $('.multi-select').on('change', function() {
                var selectedCount = $(this).find('option:selected').length;
                var label = $(this).prev('label');
                var originalText = label.text().replace(/ \(\d+\)$/, '');
                
                if (selectedCount > 0) {
                    label.html(originalText + ' <span class="badge bg-primary">' + selectedCount + '</span>');
                } else {
                    label.html(originalText);
                }
            });
            
            // Debug multi-select values before form submission
            $('form').on('submit', function(e) {
                var selectedActors = $('#SelectedActorIds').val();
                var selectedCinemas = $('#SelectedCinemaIds').val();
                
                console.log('Selected Actors:', selectedActors);
                console.log('Selected Cinemas:', selectedCinemas);
                
                if (!selectedActors || selectedActors.length === 0) {
                    alert('Please select at least one actor');
                    e.preventDefault();
                    return false;
                }
                
                if (!selectedCinemas || selectedCinemas.length === 0) {
                    alert('Please select at least one cinema');
                    e.preventDefault();
                    return false;
                }
            });
            
            // Image file preview functionality (same as Cinema)
            $('#ImageFile').on('change', function() {
                var file = this.files[0];
                var preview = $('#PosterPreview');
                
                if (file) {
                    // Validate file type
                    var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
                    if (!allowedTypes.includes(file.type)) {
                        alert('Please select a valid image file (JPG, PNG, WebP)');
                        $(this).val('');
                        preview.attr('src', '/images/default-movie.png');
                        return;
                    }
                    
                    // Validate file size (5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('File size must be less than 5MB');
                        $(this).val('');
                        preview.attr('src', '/images/default-movie.png');
                        return;
                    }
                    
                    // Show preview
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        preview.attr('src', e.target.result);
                    };
                    reader.readAsDataURL(file);
                } else {
                    preview.attr('src', '/images/default-movie.png');
                }
            });
        });
    </script>
}
