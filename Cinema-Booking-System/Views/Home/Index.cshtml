@model IEnumerable<Cinema_Booking_System.Models.Movie>

@{
    ViewData["Title"] = "Welcome to CinemaBook - Your Ultimate Movie Experience";
}

<!-- Hero Section with Video Background -->
<section class="hero-section position-relative overflow-hidden">
    <div class="hero-background"></div>
    <div class="hero-overlay"></div>
    <div class="container position-relative">
        <div class="row align-items-center min-vh-100 py-5">
            <div class="col-lg-8 mx-auto text-center text-white">
                <h1 class="display-3 fw-bold mb-4 hero-title" data-aos="fade-up">
                    Welcome to <span class="text-primary">CinemaBook</span>
                </h1>
                <p class="lead fs-4 mb-5 hero-subtitle" data-aos="fade-up" data-aos-delay="200">
                    Discover the latest blockbusters, book premium seats, and experience cinema like never before. 
                    Your perfect movie night starts here!
                </p>
                <div class="hero-buttons" data-aos="fade-up" data-aos-delay="400">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-3 px-5 py-3">
                            <i class="bi bi-person-plus me-2"></i>Join Now
                        </a>
                        <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-light btn-lg px-5 py-3">
                            <i class="bi bi-film me-2"></i>Browse Movies
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Movies" asp-action="Index" class="btn btn-primary btn-lg me-3 px-5 py-3">
                            <i class="bi bi-film me-2"></i>Browse Movies
                        </a>
                        <a asp-controller="Cinemas" asp-action="Index" class="btn btn-outline-light btn-lg px-5 py-3">
                            <i class="bi bi-building me-2"></i>View Cinemas
                        </a>
                    }

                </div>
            </div>
        </div>
        <div class="hero-scroll-indicator">
            <a href="#stats-section" class="text-white smooth-scroll">
                <i class="bi bi-chevron-down fs-2 animate-bounce"></i>
            </a>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section id="stats-section" class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card h-100 p-4 bg-white rounded shadow-sm">
                    <div class="stat-icon mb-3">
                        <i class="bi bi-film text-primary fs-1"></i>
                    </div>
                    <h3 class="stat-number fw-bold text-dark mb-2" data-target="150">0</h3>
                    <p class="stat-label text-muted mb-0">Total Movies</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card h-100 p-4 bg-white rounded shadow-sm">
                    <div class="stat-icon mb-3">
                        <i class="bi bi-calendar-event text-success fs-1"></i>
                    </div>
                    <h3 class="stat-number fw-bold text-dark mb-2" data-target="25">0</h3>
                    <p class="stat-label text-muted mb-0">Upcoming Releases</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card h-100 p-4 bg-white rounded shadow-sm">
                    <div class="stat-icon mb-3">
                        <i class="bi bi-building text-warning fs-1"></i>
                    </div>
                    <h3 class="stat-number fw-bold text-dark mb-2" data-target="12">0</h3>
                    <p class="stat-label text-muted mb-0">Premium Cinemas</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card h-100 p-4 bg-white rounded shadow-sm">
                    <div class="stat-icon mb-3">
                        <i class="bi bi-people text-info fs-1"></i>
                    </div>
                    <h3 class="stat-number fw-bold text-dark mb-2" data-target="5000">0</h3>
                    <p class="stat-label text-muted mb-0">Happy Customers</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Genre Filter Section -->
<section class="py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="display-5 fw-bold mb-3">Explore by Genre</h2>
                <p class="lead text-muted mb-4">Find your perfect movie experience</p>
                <div class="genre-filters">
                    <button class="btn btn-outline-primary me-2 mb-2 genre-btn active" data-genre="all">All Movies</button>
                    <button class="btn btn-outline-primary me-2 mb-2 genre-btn" data-genre="Action">Action</button>
                    <button class="btn btn-outline-primary me-2 mb-2 genre-btn" data-genre="Comedy">Comedy</button>
                    <button class="btn btn-outline-primary me-2 mb-2 genre-btn" data-genre="Drama">Drama</button>
                    <button class="btn btn-outline-primary me-2 mb-2 genre-btn" data-genre="Horror">Horror</button>
                    <button class="btn btn-outline-primary me-2 mb-2 genre-btn" data-genre="Sci-Fi">Sci-Fi</button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Movies Carousel Section -->
<section id="featured-movies" class="py-5 bg-dark text-white">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="display-5 fw-bold mb-3">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span>Now Showing</span>
                    }
                    else
                    {
                        <span>Featured Movies</span>
                    }
                </h2>
                <p class="lead text-light mb-4">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <span>Sign up or login to book tickets and access full movie details</span>
                    }
                    else
                    {
                        <span>Book your tickets now for the best cinema experience</span>
                    }
                </p>
            </div>
        </div>

        <!-- Movies Carousel -->
        <div id="moviesCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{
                    var moviesList = Model.ToList();
                    var chunkedMovies = moviesList.Select((movie, index) => new { movie, index })
                                                  .GroupBy(x => x.index / 3)
                                                  .Select(g => g.Select(x => x.movie).ToList())
                                                  .ToList();
                }
                
                @for (int i = 0; i < chunkedMovies.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row">
                            @foreach (var movie in chunkedMovies[i])
                            {
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card bg-dark border-light shadow-lg h-100 movie-card" data-genre="@movie.movieCategory">
                                        <div class="position-relative movie-poster">
                                            <img src="@movie.ImageUrl" class="card-img-top" alt="@movie.Name" style="height:350px; object-fit:cover;" />
                                            <div class="movie-overlay">
                                                <div class="movie-overlay-content">
                                                    <h5 class="text-white fw-bold">@movie.Name</h5>
                                                    <p class="text-light small">@(movie.Description.Length > 80 ? movie.Description.Substring(0, 80) + "..." : movie.Description)</p>
                                                </div>
                                            </div>
                                            <div class="position-absolute top-0 end-0 m-2">
                                                @if (DateTime.Now >= movie.Startdate && DateTime.Now <= movie.Enddate)
                                                {
                                                    <span class="badge bg-success">Now Showing</span>
                                                }
                                                else if (DateTime.Now > movie.Enddate)
                                                {
                                                    <span class="badge bg-danger">Ended</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">Coming Soon</span>
                                                }
                                            </div>
                                            <div class="position-absolute bottom-0 start-0 m-2">
                                                <span class="badge bg-dark bg-opacity-75">@movie.movieCategory</span>
                                            </div>
                                        </div>
                                        <div class="card-body d-flex flex-column text-white">
                                            <h5 class="card-title text-primary">@movie.Name</h5>
                                            <div class="movie-info flex-grow-1">
                                                <p class="mb-2"><i class="bi bi-tag me-2"></i><strong>Genre:</strong> @movie.movieCategory</p>
                                                <p class="mb-2"><i class="bi bi-currency-dollar me-2"></i><strong>Price:</strong> <span class="text-success fw-bold">@movie.Price.ToString("c")</span></p>
                                                <p class="mb-0"><i class="bi bi-calendar me-2"></i><small class="text-light">@movie.Startdate.ToString("MMM dd") - @movie.Enddate.ToString("MMM dd, yyyy")</small></p>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent border-light text-center">
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.id" class="btn btn-outline-primary me-2">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                                @if (DateTime.Now <= movie.Enddate)
                                                {
                                                    <a asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@movie.id" class="btn btn-primary">
                                                        <i class="bi bi-cart-plus"></i> Book Now
                                                    </a>
                                                }
                                            }
                                            else
                                            {
                                                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light">
                                                    <i class="bi bi-box-arrow-in-right"></i> Login to Book
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
            
            <!-- Carousel Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#moviesCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#moviesCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
