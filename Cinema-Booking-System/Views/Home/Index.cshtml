<!-- Custom Styles -->
<style>
    /* Hero Section */
    .hero-section {
        min-height: 100vh;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        position: relative;
    }
    
    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80') center/cover;
        opacity: 0.3;
    }
    
    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(22, 33, 62, 0.8) 50%, rgba(15, 52, 96, 0.8) 100%);
    }
    
    .hero-title {
        animation: fadeInUp 1s ease-out;
    }
    
    .hero-subtitle {
        animation: fadeInUp 1s ease-out 0.3s both;
    }
    
    .hero-buttons {
        animation: fadeInUp 1s ease-out 0.6s both;
    }
    
    .hero-scroll-indicator {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
    }
    
    .animate-bounce {
        animation: bounce 2s infinite;
    }
    
    /* Stats Section */
    .stat-card {
        transition: all 0.3s ease;
        border: none !important;
    }
    
    .stat-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
    }
    
    .stat-number {
        font-size: 2.5rem;
        color: #007bff !important;
    }
    
    /* Genre Filters */
    .genre-btn {
        transition: all 0.3s ease;
        border-radius: 25px;
        padding: 8px 20px;
    }
    
    .genre-btn.active {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }
    
    .genre-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,123,255,0.3);
    }
    
    /* Movie Cards */
    .movie-card {
        transition: all 0.3s ease;
        border: none !important;
        overflow: hidden;
    }
    
    .movie-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0,0,0,0.3) !important;
    }
    
    .movie-poster {
        overflow: hidden;
    }
    
    .movie-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, transparent 60%);
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        align-items: flex-end;
        padding: 20px;
    }
    
    .movie-card:hover .movie-overlay {
        opacity: 1;
    }
    
    .movie-overlay-content {
        transform: translateY(20px);
        transition: transform 0.3s ease;
    }
    
    .movie-card:hover .movie-overlay-content {
        transform: translateY(0);
    }
    
    /* Carousel Enhancements */
    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
        background: linear-gradient(to right, rgba(0,0,0,0.5), transparent);
    }
    
    .carousel-control-next {
        background: linear-gradient(to left, rgba(0,0,0,0.5), transparent);
    }
    
    /* Navbar Enhancements */
    .navbar-dark .navbar-nav .nav-link {
        transition: all 0.3s ease;
        position: relative;
    }
    
    .navbar-dark .navbar-nav .nav-link:hover {
        color: #007bff !important;
        transform: translateY(-2px);
    }
    
    .navbar-dark .navbar-nav .nav-link.active {
        color: #007bff !important;
    }
    
    .navbar-dark .navbar-nav .nav-link.active::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 50%;
        transform: translateX(-50%);
        width: 30px;
        height: 2px;
        background: #007bff;
    }
    
    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes bounce {
        0%, 20%, 53%, 80%, 100% {
            transform: translate3d(0,0,0);
        }
        40%, 43% {
            transform: translate3d(0,-15px,0);
        }
        70% {
            transform: translate3d(0,-7px,0);
        }
        90% {
            transform: translate3d(0,-2px,0);
        }
    }
    
    @@keyframes countUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem !important;
        }
        
        .hero-subtitle {
            font-size: 1.1rem !important;
        }
        
        .stat-number {
            font-size: 2rem !important;
        }
        
        .movie-card {
            margin-bottom: 2rem;
        }
    }
    
    /* Smooth Scrolling */
    html {
        scroll-behavior: smooth;
    }
    
    /* Loading Animation */
    .loading {
        opacity: 0.5;
        pointer-events: none;
    }
    
    /* Text Light Variants */
    .text-light-50 {
        color: rgba(255, 255, 255, 0.7) !important;
    }
    
    .text-light-50:hover {
        color: rgba(255, 255, 255, 1) !important;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Navbar Active State Management
            function setActiveNavLink() {
                const currentPath = window.location.pathname.toLowerCase();
                $('.navbar-nav .nav-link').removeClass('active');
                
                if (currentPath === '/' || currentPath === '/home' || currentPath === '/home/index') {
                    $('[data-page="home"]').addClass('active');
                } else if (currentPath.includes('/movies')) {
                    $('[data-page="movies"]').addClass('active');
                } else if (currentPath.includes('/cinemas')) {
                    $('[data-page="cinemas"]').addClass('active');
                } else if (currentPath.includes('/actor')) {
                    $('[data-page="actors"]').addClass('active');
                } else if (currentPath.includes('/producer')) {
                    $('[data-page="producers"]').addClass('active');
                }
            }
            
            setActiveNavLink();
            
            // Smooth Scrolling for Anchor Links
            $('.smooth-scroll').on('click', function(e) {
                e.preventDefault();
                const target = $(this.getAttribute('href'));
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 80
                    }, 1000, 'easeInOutQuad');
                }
            });
            
            // Scroll to Top Button
            const scrollToTopBtn = $('#scrollToTop');
            
            $(window).scroll(function() {
                if ($(this).scrollTop() > 300) {
                    scrollToTopBtn.fadeIn();
                } else {
                    scrollToTopBtn.fadeOut();
                }
            });
            
            scrollToTopBtn.on('click', function() {
                $('html, body').animate({scrollTop: 0}, 800);
            });
            
            // Animated Counter for Stats
            function animateCounters() {
                $('.stat-number').each(function() {
                    const $this = $(this);
                    const target = parseInt($this.data('target'));
                    const duration = 2000;
                    const increment = target / (duration / 16);
                    let current = 0;
                    
                    const timer = setInterval(function() {
                        current += increment;
                        if (current >= target) {
                            current = target;
                            clearInterval(timer);
                        }
                        $this.text(Math.floor(current).toLocaleString());
                    }, 16);
                });
            }
            
            // Intersection Observer for Stats Animation
            const statsObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounters();
                        statsObserver.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.5 });
            
            const statsSection = document.getElementById('stats-section');
            if (statsSection) {
                statsObserver.observe(statsSection);
            }
            
            // Genre Filter Functionality
            $('.genre-btn').on('click', function() {
                const genre = $(this).data('genre');
                
                // Update active button
                $('.genre-btn').removeClass('active');
                $(this).addClass('active');
                
                // Filter movies
                if (genre === 'all') {
                    $('.movie-card').fadeIn(300);
                } else {
                    $('.movie-card').each(function() {
                        const movieGenre = $(this).data('genre');
                        if (movieGenre === genre) {
                            $(this).fadeIn(300);
                        } else {
                            $(this).fadeOut(300);
                        }
                    });
                }
            });
            
            // Movie Card Hover Effects
            $('.movie-card').hover(
                function() {
                    $(this).find('.movie-overlay').addClass('show');
                },
                function() {
                    $(this).find('.movie-overlay').removeClass('show');
                }
            );
            
            // Carousel Auto-play Control
            $('#moviesCarousel').carousel({
                interval: 5000,
                wrap: true,
                keyboard: true
            });
            
            // Pause carousel on hover
            $('#moviesCarousel').hover(
                function() {
                    $(this).carousel('pause');
                },
                function() {
                    $(this).carousel('cycle');
                }
            );
            
            // Newsletter Subscription (Mock)
            $('.btn:contains("Subscribe")').on('click', function() {
                const email = $(this).siblings('input[type="email"]').val();
                if (email) {
                    alert('Thank you for subscribing! You will receive updates about new movies and special offers.');
                    $(this).siblings('input[type="email"]').val('');
                } else {
                    alert('Please enter a valid email address.');
                }
            });
            
            // Add to Cart Animation
            $('[href*="AddItemToShoppingCart"]').on('click', function(e) {
                const btn = $(this);
                const originalText = btn.html();
                
                btn.html('<i class="bi bi-check-circle me-2"></i>Added!');
                btn.removeClass('btn-primary btn-success').addClass('btn-success');
                
                setTimeout(function() {
                    btn.html(originalText);
                    btn.removeClass('btn-success').addClass('btn-primary');
                }, 2000);
            });
            
            // Lazy Loading for Images
            if ('IntersectionObserver' in window) {
                const imageObserver = new IntersectionObserver((entries, observer) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const img = entry.target;
                            img.src = img.dataset.src;
                            img.classList.remove('lazy');
                            imageObserver.unobserve(img);
                        }
                    });
                });
                
                document.querySelectorAll('img[data-src]').forEach(img => {
                    imageObserver.observe(img);
                });
            }
            
            // Search Functionality (if search box exists)
            $('#movieSearch').on('input', function() {
                const searchTerm = $(this).val().toLowerCase();
                $('.movie-card').each(function() {
                    const movieTitle = $(this).find('.card-title').text().toLowerCase();
                    const movieDescription = $(this).find('.card-text').text().toLowerCase();
                    
                    if (movieTitle.includes(searchTerm) || movieDescription.includes(searchTerm)) {
                        $(this).parent().show();
                    } else {
                        $(this).parent().hide();
                    }
                });
            });
            
            // Initialize tooltips and popovers
            $('[data-bs-toggle="tooltip"]').tooltip();
            $('[data-bs-toggle="popover"]').popover();
            
            // Page Loading Animation
            $(window).on('load', function() {
                $('.loading').removeClass('loading');
            });
        });
    </script>
}
