@model PaymentResult

@{
    ViewData["Title"] = "تم الحجز بنجاح";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="alert alert-success text-center" role="alert" style="padding: 3rem;">
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
            </div>
            <h2 class="alert-heading text-success mb-3">
                تم الحجز بنجاح! ✅
            </h2>
            <h4 class="mb-4">شكراً لك على الحجز</h4>
            <p class="lead">تم معالجة طلبك بنجاح وسيتم إرسال تأكيد الحجز قريباً.</p>
        </div>

        <div class="text-center mt-4">
            <a class="btn btn-primary btn-lg me-3" asp-controller="Movies" asp-action="Index">
                <i class="bi bi-arrow-left me-2"></i>
                العودة للأفلام
            </a>
            <a class="btn btn-outline-secondary btn-lg" asp-action="Index">
                <i class="bi bi-list-ul me-2"></i>
                عرض حجوزاتي
            </a>
        </div>
    </div>
</div>

<style>
    .alert-success {
        border: none;
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
    }
</style>
