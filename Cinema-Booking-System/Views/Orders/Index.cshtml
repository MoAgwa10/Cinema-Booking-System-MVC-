@model IEnumerable<Cinema_Booking_System.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <h2>@ViewData["Title"]</h2>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.id</td>
                                <td>
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <li>
                                                <small>
                                                    @item.Amount x @item.Movie.Name
                                                    <span class="text-muted">(@item.Price.ToString("c") each)</span>
                                                </small>
                                            </li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    <strong>@order.OrderItems.Sum(m => m.Amount * m.Price).ToString("c")</strong>
                                </td>
                                <td>@order.OrderItems.FirstOrDefault()?.Movie.Startdate.ToString("dd MMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center">
                <div class="alert alert-info">
                    <h4>No Orders Found</h4>
                    <p>You haven't placed any orders yet.</p>
                    <a class="btn btn-primary" asp-controller="Movies" asp-action="Index">
                        <i class="bi bi-film"></i> Browse Movies
                    </a>
                </div>
            </div>
        }
    </div>
</div>
