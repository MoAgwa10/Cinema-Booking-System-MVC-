@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema_Booking_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cinema_Booking_System.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-lg" id="mainNavbar">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-camera-reels me-2"></i>
                    CinemaBook
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" data-page="home">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="moviesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-film me-1"></i>Movies
                            </a>
                            <ul class="dropdown-menu shadow" aria-labelledby="moviesDropdown">
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="Index">
                                    <i class="bi bi-collection-play me-2"></i>All Movies
                                </a></li>
                                @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Movies" asp-action="Create">
                                        <i class="bi bi-plus-circle me-2"></i>Add Movie
                                    </a></li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cinemas" asp-action="Index" data-page="cinemas">
                                <i class="bi bi-building me-1"></i>Cinemas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Actor" asp-action="Index" data-page="actors">
                                <i class="bi bi-people me-1"></i>Actors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Producer" asp-action="Index" data-page="producers">
                                <i class="bi bi-person-badge me-1"></i>Producers
                            </a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Orders" asp-action="ShoppingCart">
                                    <i class="bi bi-cart3 me-1"></i>Cart
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cartBadge" style="display: none;">
                                        0
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Orders" asp-action="Index">
                                    <i class="bi bi-receipt me-1"></i>My Orders
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>@UserManager.GetUserName(User)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                    <li><h6 class="dropdown-header">Account</h6></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index"><i class="bi bi-receipt me-2"></i>My Orders</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light ms-2 px-3" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>Sign Up
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content with padding for fixed navbar -->
    <main role="main" style="padding-top: 76px;">
        @RenderBody()
    </main>

    <!-- Enhanced Footer -->
    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-camera-reels me-2"></i>CinemaBook
                    </h5>
                    <p class="text-light-50">Your ultimate destination for movie bookings. Experience cinema like never before with our easy-to-use platform.</p>
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="#" class="text-light me-3"><i class="bi bi-twitter fs-4"></i></a>
                        <a href="#" class="text-light me-3"><i class="bi bi-instagram fs-4"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-youtube fs-4"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light-50 text-decoration-none">Home</a></li>
                        <li><a href="#" class="text-light-50 text-decoration-none">Movies</a></li>
                        <li><a href="#" class="text-light-50 text-decoration-none">Cinemas</a></li>
                        <li><a href="#" class="text-light-50 text-decoration-none">About Us</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Contact Info</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-geo-alt me-2"></i>123 Cinema Street, Movie City</li>
                        <li class="mb-2"><i class="bi bi-telephone me-2"></i>01009487781</li>
                        <li class="mb-2"><i class="bi bi-envelope me-2"></i>moagwa15@gmail.com</li>
                    </ul>
                </div>
                <div class="col-lg-3 mb-4">
                    <h6 class="fw-bold mb-3">Newsletter</h6>
                    <p class="text-light-50">Subscribe to get updates on new movies and special offers.</p>
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Your email">
                        <button class="btn btn-primary" type="button">Subscribe</button>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 CinemaBook. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-controller="Home" asp-action="Privacy" class="text-light-50 text-decoration-none me-3">Privacy Policy</a>
                    <a href="#" class="text-light-50 text-decoration-none">Terms of Service</a>
                </div>
            </div>
        </div>
        
        <!-- Scroll to Top Button -->
        <button class="btn btn-primary rounded-circle position-fixed bottom-0 end-0 m-4" id="scrollToTop" style="display: none; z-index: 1000;">
            <i class="bi bi-arrow-up"></i>
        </button>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
