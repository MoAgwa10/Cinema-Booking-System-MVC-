@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>@ViewData["Title"]</h2>
        
        @* Debug Info *@
        @if (TempData["Debug"] != null)
        {
            <div class="alert alert-info">
                <strong>Debug Info:</strong> @TempData["Debug"]
            </div>
        }
        
        @if (TempData["UploadResult"] != null)
        {
            <div class="alert alert-warning">
                <strong>Upload Result:</strong> @TempData["UploadResult"]
            </div>
        }

        <p>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Cinema
                </a>
            }
        </p>

        <table class="table table-bordered table-striped">
            <thead>
                <tr class="text-center">
                    <th>Logo</th>
                    <th>Cinema Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr>
                        <td class="align-middle text-center">
                            <img class="rounded" src="@cinema.LogoUrl" alt="@cinema.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            <label class="control-label">@cinema.FullName</label>
                        </td>
                        <td class="align-middle">
                            <label class="control-label">@cinema.Description</label>
                        </td>
                        <td class="align-middle text-center">
                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@cinema.id">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-success text-success" asp-action="Edit" asp-route-id="@cinema.id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@cinema.id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>