@model Cinema_Booking_System.Models.ViewModels.ActorCreateVM

@{
    ViewData["Title"] = "Create New Actor";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Header -->
            <div class="text-center mb-4">
                <h2 class="display-6 fw-bold text-primary mb-2">
                    <i class="bi bi-person-plus me-2"></i>Add New Actor
                </h2>
                <p class="text-muted">Create a new actor profile for the cinema booking system</p>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Form Card -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Profile Picture Preview -->
                        <div class="text-center mb-4">
                            <div class="profile-pic-container">
                                <img id="ProfilePicPreview" src="/images/default-actor.png"
                                     alt="Profile Picture Preview"
                                     class="profile-pic-preview rounded-circle shadow" />
                                <div class="profile-pic-overlay">
                                    <i class="bi bi-camera-fill"></i>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <!-- Full Name -->
                                <div class="form-group mb-4">
                                    <label asp-for="FullName" class="form-label fw-bold">
                                        <i class="bi bi-person me-2 text-primary"></i>Full Name
                                    </label>
                                    <input asp-for="FullName" class="form-control form-control-lg"
                                           placeholder="Enter actor's full name" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <!-- Profile Picture File Upload -->
                                <div class="form-group mb-4">
                                    <label asp-for="ImageFile" class="form-label fw-bold">
                                        <i class="bi bi-image me-2 text-primary"></i>Profile Picture
                                    </label>
                                    <input asp-for="ImageFile" type="file" class="form-control form-control-lg"
                                           id="ImageFile" accept="image/*" />
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    <div class="form-text">
                                        <small class="text-muted">
                                            <i class="bi bi-info-circle me-1"></i>
                                            Upload an image file (JPG, PNG, GIF, WebP) - Max 5MB
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <!-- Biography -->
                                <div class="form-group mb-4">
                                    <label asp-for="Bio" class="form-label fw-bold">
                                        <i class="bi bi-journal-text me-2 text-primary"></i>Biography
                                    </label>
                                    <textarea asp-for="Bio" class="form-control" rows="8"
                                              placeholder="Enter actor's biography, career highlights, and achievements..."></textarea>
                                    <span asp-validation-for="Bio" class="text-danger"></span>
                                    <div class="form-text">
                                        <small class="text-muted">
                                            <i class="bi bi-info-circle me-1"></i>
                                            Provide detailed information about the actor's career and background
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-plus-circle me-2"></i>Create Actor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        .profile-pic-container {
            position: relative;
            display: inline-block;
        }

        .profile-pic-preview {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border: 4px solid #fff;
            transition: all 0.3s ease;
        }

        .profile-pic-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 123, 255, 0.8);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
            cursor: pointer;
        }

        .profile-pic-container:hover .profile-pic-overlay {
            opacity: 1;
        }

        .profile-pic-overlay i {
            color: white;
            font-size: 2rem;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .card {
            background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
        }

        @@media (max-width: 768px) {
            .profile-pic-preview

        {
            width: 120px;
            height: 120px;
        }

        }</style>

    <script>
        $(document).ready(function() {
            // Image file preview functionality (consistent with Cinema/Movie)
            $('#ImageFile').on('change', function() {
                var file = this.files[0];
                var preview = $('#ProfilePicPreview');

                if (file) {
                    // Validate file type (consistent with ImageService)
                    var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
                    if (!allowedTypes.includes(file.type)) {
                        alert('Please select a valid image file (JPG, PNG, WebP)');
                        $(this).val('');
                        preview.attr('src', '/images/default-actor.png');
                        return;
                    }

                    // Validate file size (5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('File size must be less than 5MB');
                        $(this).val('');
                        preview.attr('src', '/images/default-actor.png');
                        return;
                    }

                    // Show preview
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        preview.attr('src', e.target.result);
                    };
                    reader.readAsDataURL(file);
                } else {
                    preview.attr('src', '/images/default-actor.png');
                }
            });

            // Form validation
            $('form').on('submit', function(e) {
                var isValid = true;
                var fullName = $('#FullName').val()?.trim();
                var bio = $('#Bio').val()?.trim();
                // Clear previous errors
                $('.text-danger').text('');

                if (!fullName) {
                    $('#FullName').next('.text-danger').text('Full name is required');
                    isValid = false;
                }

                if (!bio) {
                    $('#Bio').next('.text-danger').text('Biography is required');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    $('html, body').animate({
                        scrollTop: $('.text-danger:visible').first().offset().top - 100
                    }, 500);
                }
            });

            // Character counter for biography
            $('#Bio').on('input', function() {
                var length = $(this).val().length;
                var maxLength = 1000;
                var remaining = maxLength - length;

                var counter = $(this).siblings('.form-text').find('.char-counter');
                if (counter.length === 0) {
                    $(this).siblings('.form-text').append('<span class="char-counter float-end"></span>');
                    counter = $(this).siblings('.form-text').find('.char-counter');
                }

                counter.text(remaining + ' characters remaining');

                if (remaining < 50) {
                    counter.addClass('text-warning');
                } else {
                    counter.removeClass('text-warning');
                }

                if (remaining < 0) {
                    counter.addClass('text-danger').removeClass('text-warning');
                } else {
                    counter.removeClass('text-danger');
                }
            });
        });
    </script>
}
