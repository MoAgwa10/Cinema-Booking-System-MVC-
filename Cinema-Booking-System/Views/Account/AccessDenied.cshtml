@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title text-danger">Access Denied</h2>
                    <p class="card-text">
                        You don't have permission to access this resource. 
                        This action requires you to be logged in with appropriate permissions.
                    </p>
                    
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Please log in to access this feature.
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a asp-action="Login" asp-controller="Account" 
                               asp-route-returnUrl="@ViewData["ReturnUrl"]" 
                               class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                Login
                            </a>
                            <a asp-action="Register" asp-controller="Account" 
                               class="btn btn-outline-secondary">
                                <i class="bi bi-person-plus me-2"></i>
                                Create Account
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            You are logged in but don't have the required permissions for this action.
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                                <i class="bi bi-house me-2"></i>
                                Go to Home
                            </a>
                            <a asp-action="Index" asp-controller="Movies" class="btn btn-outline-secondary">
                                <i class="bi bi-film me-2"></i>
                                Browse Movies
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
    }
    
    .bi-shield-exclamation {
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
</style>
