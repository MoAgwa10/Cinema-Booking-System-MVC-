<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-warning text-dark">
                    <h3>Password Reset Link Sent</h3>
                </div>
                <div class="card-body text-center">
                    <p>Please check your email to reset your password.</p>
                    
                    @if (TempData["ResetLink"] != null)
                    {
                        <div class="alert alert-info mt-3">
                            <strong>Development Mode:</strong><br />
                            <small>Click this link to reset your password:</small><br />
                            <a href="@TempData["ResetLink"]" class="btn btn-sm btn-info mt-2">Reset Password</a>
                        </div>
                    }
                    
                    <a asp-action="Login" class="btn btn-warning">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
