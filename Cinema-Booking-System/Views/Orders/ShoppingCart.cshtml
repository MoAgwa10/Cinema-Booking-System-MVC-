@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>Your Shopping Cart</h2>
        </div>

        @if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
        {
            <table class="table table-responsive-sm">
                <thead>
                    <tr>
                        <th>Selected Amount</th>
                        <th>Movie</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                    {
                        <tr>
                            <td class="align-middle">@item.Amount</td>
                            <td class="align-middle">
                                <div class="d-flex align-items-center">
                                    <img src="@item.Movie.ImageUrl" alt="@item.Movie.Name" style="width: 60px; height: 80px; object-fit: cover;" class="me-3" />
                                    <div>
                                        <h6 class="mb-0">@item.Movie.Name</h6>
                                        <small class="text-muted">@item.Movie.movieCategory</small>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">@item.Movie.Price.ToString("c")</td>
                            <td class="align-middle">@((item.Movie.Price * item.Amount).ToString("c"))</td>
                            <td class="align-middle">
                                <a class="text-danger" asp-action="RemoveItemFromShoppingCart" asp-route-id="@item.Movie.id">
                                    <i class="bi bi-cart-dash"></i>
                                </a>
                                |
                                <a class="text-success" asp-action="AddItemToShoppingCart" asp-route-id="@item.Movie.id">
                                    <i class="bi bi-cart-plus"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2"></td>
                        <td><b>Total: </b></td>
                        <td><b>@Model.ShoppingCartTotal.ToString("c")</b></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>

            <div class="text-center">
                <div class="text-center">
                    <a class="btn btn-outline-success" asp-action="CompleteOrder">
                        Complete Order
                    </a>
                    <a class="btn btn-outline-secondary" asp-controller="Movies" asp-action="Index">
                        Add more items
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="empty-cart text-center">
                <h4>Your cart is empty</h4>
                <p class="lead">Start adding some movies!</p>
                <a class="btn btn-outline-primary btn-lg" asp-controller="Movies" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Continue Shopping
                </a>
            </div>
        }
    </div>
</div>

<style>
    .empty-cart {
        padding: 50px 0;
    }
</style>
