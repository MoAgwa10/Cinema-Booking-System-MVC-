@model IEnumerable<Cinema_Booking_System.Models.Producer>

@{
    ViewData["Title"] = "Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>@ViewData["Title"]</h2>

        <p>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Producer
                </a>
            }
        </p>

        <table class="table table-bordered table-striped">
            <thead>
                <tr class="text-center">
                    <th>Profile Picture</th>
                    <th>Full Name</th>
                    <th>Biography</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle text-center">
                            <img class="rounded-circle" src="@item.ProfilePicUrl" alt="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            <label class="control-label">@item.FullName</label>
                        </td>
                        <td class="align-middle">
                            <label class="control-label">@item.Bio</label>
                        </td>
                        <td class="align-middle text-center">
                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.id">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-success text-success" asp-action="Edit" asp-route-id="@item.id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
